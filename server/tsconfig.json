{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2015", "dom"],
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "",
        "allowJs": true,
        "jsx": "react",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@src/*" : [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}